<manifest
	package="com.ratebeer.android"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".RateBeerApp"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">

		<activity android:name=".gui.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".gui.UpgradeActivity" />
		<activity android:name=".gui.SearchActivity" />
		<activity android:name=".gui.BeerActivity" android:theme="@style/AppTheme.NoStatusBar" />
		<activity android:name=".gui.AboutActivity" />
		<activity android:name=".gui.HelpWhereRatingsActivity" />

	</application>

</manifest>
