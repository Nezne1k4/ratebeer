<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/blue_main</item>
		<item name="colorPrimaryDark">@color/yellow_main</item>
		<item name="colorAccent">@color/red_main</item>
		<item name="colorControlHighlight">@color/yellow_main</item>
		<item name="colorButtonNormal">@color/red_main</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowBackground">@android:color/white</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/blue_main</item>
		<item name="colorPrimaryDark">@color/yellow_main</item>
		<item name="colorAccent">@color/red_main</item>
		<item name="colorControlHighlight">@color/yellow_main</item>
		<item name="colorButtonNormal">@color/red_main</item>
		<item name="windowActionModeOverlay">true</item>
	</style>

	<style name="AppTheme.NoStatusBar">
		<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
		<item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
	</style>

	<style name="AppTheme.Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="searchViewStyle">@style/AppTheme.SearchView</item>
	</style>

	<style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
		<item name="iconifiedByDefault">false</item>
		<item name="queryBackground">@null</item>
		<item name="searchIcon">@null</item>
	</style>

	<style name="AppButton" parent="Widget.AppCompat.Button">
		<item name="android:minWidth">32dip</item>
	</style>

	<style name="AppButton.Orange" parent="Widget.AppCompat.Button">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppButton.White" parent="Widget.AppCompat.Button">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="AppButton.Line" parent="Widget.AppCompat.Button">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:padding">16dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textSize">15sp</item>
	</style>

	<style name="AppImageButton.Orange" parent="Widget.AppCompat.ImageButton">
		<item name="android:background">@drawable/back_selectable_red</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="Badge">
		<item name="android:padding">4dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">12sp</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">8dp</item>
	</style>

	<style name="Badge.Alias">
		<item name="android:background">@color/grey_light</item>
	</style>

	<style name="Badge.Retired">
		<item name="android:background">@color/grey_dark</item>
	</style>

	<style name="Badge.Rated">
		<item name="android:background">@color/orange_main</item>
	</style>

	<style name="Badge.Unrateable">
		<item name="android:background">@color/grey_dark</item>
	</style>

	<style name="Badge.Offline">
		<item name="android:background">@color/grey_dark</item>
	</style>

	<style name="Marker">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginRight">4dp</item>
		<item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">4dp</item>
	</style>

	<style name="Marker.Number">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">28sp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="Marker.Label">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textSize">11.5sp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/grey_dark</item>
		<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
	</style>

	<style name="Rating">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginRight">4dp</item>
		<item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">4dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="RatingNumber">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">24dp</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="RatingLabel">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="RatingLength">
		<item name="android:textColor">@color/red_main</item>
	</style>

	<style name="RatingLength.Sufficient">
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="RatingBar" parent="Theme.AppCompat">
		<item name="android:progressDrawable">@drawable/ic_view_star</item>
		<item name="android:height">36dp</item>
		<item name="android:minHeight">36dp</item>
		<item name="android:maxHeight">36dp</item>
	</style>

	<!-- This has a v21 version that uses selectableItemBackgroundBorderless instead -->
	<style name="NumberPicker">
		<item name="android:layout_height">@dimen/block_size</item>
		<item name="android:layout_width">@dimen/block_size</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
		<item name="android:textSize">36sp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

</resources>
