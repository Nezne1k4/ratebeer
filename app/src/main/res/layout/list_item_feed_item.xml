<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="3dp"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/avatar_image"
		android:layout_width="@dimen/block_size"
		android:layout_height="@dimen/block_size"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:scaleType="fitCenter"
		android:src="@drawable/beer_165358" />

	<ImageView
		android:id="@+id/beer_image"
		android:layout_width="@dimen/block_size"
		android:layout_height="@dimen/block_size"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="4dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_marginStart="4dp"
		android:scaleType="fitCenter"
		android:src="@drawable/beer_165358" />

	<TextView
		android:id="@+id/activity_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:layout_toEndOf="@+id/avatar_image"
		android:layout_toLeftOf="@+id/beer_image"
		android:layout_toRightOf="@+id/avatar_image"
		android:layout_toStartOf="@+id/beer_image"
		android:fontFamily="sans-serif-condensed"
		android:textColor="@android:color/black"
		android:textSize="16sp"
		tools:text="Ceasar has just rated À l’Abri de la Tempête Palabre de la Corne de Glace and 2 more" />

</RelativeLayout>
